@using Kyuyo.Infrastructure.Utils
@using Kyuyo.BL.Resources

@{
    Layout = null;
    var userInfo = Helper.GetCurrentUserInfo();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">

    <title>@Strings.AppTitle</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries --> <!--[if lt IE 9]> <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script> <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script> <![endif]-->
</head>

<body>
    <div class="page-content-wrapper-inner container-fluid page-front" id="page-select-form">
        <div class="page-front-inner">
            @*<h2>Please select a form you want to work on</h2>*@
            <div class="front-menu-group">

                <ul class="front-menu-list">
                    <li class="front-menu-title">@Strings.MenuMaster</li>
                    @{ 
                        foreach(var menu in userInfo.ScreenMaster)
                        {
                            <li>@Html.ActionLink(@menu.ScreenName, "Index", new { controller = @menu.Url }, new { @class = "btn btn-primary btn-size-large" })</li>
                        }
                    }
                </ul>
                <ul class="front-menu-list">
                    <li class="front-menu-title">@Strings.MenuBus</li>
                    @{
                        foreach (var menu in userInfo.ScreenBusiness)
                        {
                            <li>@Html.ActionLink(@menu.ScreenName, "Index", new { controller = @menu.Url }, new { @class = "btn btn-primary btn-size-large" })</li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</body>
</html>
